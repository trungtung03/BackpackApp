<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/round_back_log_in"
        layout="@layout/round_back_backpack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_login_to_sign_up_backpack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/round_back_text_backpack_margin_top"
        android:layout_marginEnd="@dimen/text_backpack_sign_up_margin_end"
        android:fontFamily="@font/poppins_bold"
        android:lineHeight="@dimen/round_back_text_backpack_line_height"
        android:text="@string/text_login_backpack"
        android:textColor="@color/text_backpack_sign_up_to_log_in"
        android:textSize="@dimen/round_back_text_size_backpack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_email_backpack_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edt_sign_up_backpack_margin_start_end"
        android:layout_marginEnd="@dimen/edt_sign_up_backpack_margin_start_end"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/hint_edit_text_email"
        android:lineHeight="@dimen/line_height_text_backpack_account"
        android:textColor="@color/round_back_text_backpack"
        android:textColorHint="@color/round_back_text_backpack"
        android:textSize="@dimen/text_size_backpack_edt_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/round_back_log_in"
        app:layout_constraintVertical_bias="0.214"
        tools:ignore="HardcodedText,SpUsage,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_password_backpack_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edt_sign_up_backpack_margin_start_end"
        android:layout_marginEnd="@dimen/edt_sign_up_backpack_margin_start_end"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/hint_edit_text_password"
        android:inputType="textPassword"
        android:lineHeight="@dimen/line_height_text_backpack_account"
        android:textColor="@color/round_back_text_backpack"
        android:textColorHint="@color/round_back_text_backpack"
        android:textSize="@dimen/text_size_backpack_edt_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_email_backpack_login"
        app:layout_constraintVertical_bias="0.077"
        tools:ignore="HardcodedText,SpUsage,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/img_btn_hide_show_password_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/show_password"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/edt_password_backpack_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.890"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_password_backpack_login"
        app:layout_constraintVertical_bias="0.428" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_warning_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/waring_sign_log_in_backpack"
        android:src="@drawable/warning_sign"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edt_password_backpack_login"
        app:layout_constraintEnd_toStartOf="@+id/img_btn_hide_show_password_log_in"
        app:layout_constraintTop_toTopOf="@+id/edt_password_backpack_login" />

    <TextView
        android:id="@+id/tv_forgot_password_backpack_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_backpack_forgot_password_log_in_margin_top"
        android:layout_marginEnd="@dimen/text_backpack_forgot_password_log_in_margin_end"
        android:fontFamily="@font/poppins_bold"
        android:lineHeight="@dimen/title_splash_line_height"
        android:text="@string/text_backpack_forgot_password_log_in"
        android:textColor="@color/text_forgot_password_backpack_log_in"
        android:textSize="@dimen/title_splash_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_backpack_login"
        tools:ignore="SpUsage,UnusedAttribute" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_register_account_backpack_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_backpack_login"
        app:layout_constraintVertical_bias="0.286">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_backpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backpack_splash_custom_button_log_in"
            android:fontFamily="@font/poppins_bold"
            android:lineHeight="@dimen/backpack_splash_text_button_line_height"
            android:paddingStart="@dimen/splash_backpack_button_login_padding_start"
            android:paddingTop="@dimen/text_button_next_backpack_sign_up_02_padding_top"
            android:paddingEnd="@dimen/splash_backpack_button_login_padding_end"
            android:paddingBottom="@dimen/text_button_next_backpack_sign_up_02_padding_bottom"
            android:stateListAnimator="@null"
            android:text="@string/backpack_splash_button_log_in"
            android:textAllCaps="false"
            android:textColor="@color/background_button_sign_up_splash"
            android:textSize="@dimen/backpack_splash_text_button_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage,UnusedAttribute" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>